# {{ ansible_managed }}
# Minimal ACME challenge server block for initial certbot certificate creation.
# This is replaced by nginx_mono vhost configuration on subsequent runs.

server {
    listen 80 default_server;
{% if nginx_with_ipv6 | default(false) %}
    listen [::]:80 default_server;
{% endif %}
    server_name _;

    include /etc/nginx/acme-challenge.conf;

    location / {
        return 444;
    }
}
