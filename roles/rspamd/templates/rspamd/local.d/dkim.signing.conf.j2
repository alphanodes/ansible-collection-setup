# DKIM multi-domain configuration (managed by alphanodes.setup.dkim role)
# $domain variable is replaced by rspamd at runtime with the sender's domain
# This enables automatic per-domain DKIM signing
path = "/var/lib/dkim/$domain/{{ rspamd_dkim_selector }}.key"
selector = "{{ rspamd_dkim_selector }}"

### Enable DKIM signing for alias sender addresses
allow_username_mismatch = true
