{{ managed_by_ansible | comment }}
# nginx rspamd configuration

server {
  listen 443 {{ nginx_ssl_listen_option }};
{% if nginx_with_ipv6 %}
  listen [::]:443 {{ nginx_ssl_listen_option }};
{% endif %}
  server_name {{ rspamd_vhost_server }};

  {% include 'templates/nginx/modern_protocols.inc.j2' with context %}
  {% include 'templates/nginx/ssl.inc.j2' with context %}
  {% include 'templates/nginx/security_headers.inc.j2' with context %}

  location {{ rspamd_vhost_location }} {
    root /usr/share/rspamd/www/;
    try_files $uri @proxy;
{% if rspamd_web_password != '' %}

     auth_basic "Restricted access only";
     auth_basic_user_file /etc/nginx/.htpasswd_rspamd;
{% endif %}
  }

  location @proxy {
    proxy_pass http://localhost:11334;
    proxy_http_version 1.1;
    proxy_set_header Host $http_host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }

  location = /robots.txt {
    allow all;
    log_not_found off;
    access_log off;
  }

  {% include 'templates/nginx/error_handler_static.inc.j2' with context %}

  {% if rspamd_vhost_includes is defined -%}
  {% for include in rspamd_vhost_includes -%}
  include {{ include }}.conf;
  {% endfor %}
  {% endif %}

}

server {
  listen 80;
{% if nginx_with_ipv6 %}
  listen [::]:80;
{% endif %}
  server_name {{ rspamd_vhost_server }};
  return 301 https://{{ rspamd_vhost_server }}$request_uri;
}

{% if rspamd_redirects is defined -%}
server {
  server_name {{ rspamd_redirects | join(' ') }};
  listen 80;
  listen 443 {{ nginx_ssl_listen_option }};
{% if nginx_with_ipv6 %}
  listen [::]:80;
  listen [::]:443 {{ nginx_ssl_listen_option }};
{% endif %}

  {% include 'templates/nginx/modern_protocols.inc.j2' with context %}
  {% include 'templates/nginx/ssl.inc.j2' with context %}

  return 301 https://{{ rspamd_vhost_server }}$request_uri;
}
{% endif %}
{% if rspamd_vhost_for_zabbix %}

{% include 'templates/nginx/monitoring.inc.j2' with context %}
{% endif %}
