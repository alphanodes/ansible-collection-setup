---
# see default: https://github.com/adrienverge/yamllint/blob/master/yamllint/conf/default.yaml
extends: default

ignore: |
  roles/alphanodes.mongodb/

rules:
  line-length: disable
  new-lines: {type: unix}
  braces: {max-spaces-inside: 1, level: error}
  brackets: {max-spaces-inside: 1, level: error}
  comments-indentation: disable
  # indentation: disable
  #  key-duplicates: enable
  #  truthy: disable
